            android:layout_margin="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/botaofinal"
            android:onClick="atualizaBD"/>
    </LinearLayout>
</ScrollView>


</LinearLayout>